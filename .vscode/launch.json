  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch ts Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "${workspaceRoot}/src/dev.ts" // 入口文件
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}